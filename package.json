{
  "name": "contracts",
  "version": "0.0.1",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepack": "npm build",
    "test": "hardhat test",
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "test:logs": "hardhat test --logs",
    "watch": "hardhat watch compilation",
    "lint:ts": "eslint --max-warnings 0",
    "lint": "yarn fmt:sol && yarn lint:ts",
    "precommit": "yarn fmt:sol && yarn lint",
    "lint:sol": "solhint 'contracts/**/*.sol",
    "deploy:network": "hardhat deploy --network",
    "fmt:sol": "prettier 'contracts/**/*.sol' -w",
    "size": "hardhat size-contracts --show-stack-traces",
    "coverage": "hardhat coverage --testfiles ./test/src",
    "verify:network": "hardhat verify --network <contract-address>",
    "docs:init": "node_modules/.bin/doxity init --target 'doxity' --src 'contracts/*' --dir 'pages' --out './docs'",
    "docs:compile": "node_modules/.bin/doxity compile",
    "docs:develop": "node_modules/.bin/doxity develop",
    "docs:publish": "node_modules/.bin/doxity publish",
    "docs:build": "node_modules/.bin/doxity build",
    "doc": "scripts/doc.sh"
  },
  "repository": {
    "type": "git"
  },
  "dependencies": {
    "@digix/doxity-solc": "^0.6.1",
    "@types/yargs": "^17.0.22",
    "argv": "^0.0.2",
    "axios": "^1.3.4",
    "bn.js": "^5.2.1",
    "dotenv": "^16.0.3",
    "solc": "0.8.19",
    "web3": "^1.8.2",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openeth/truffle-typings": "^0.0.6",
    "@openzeppelin/contracts": "^4.8.2",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/debug": "^4.1.7",
    "@types/ethereumjs-abi": "^0.6.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "canonical-weth": "^1.4.0",
    "chai": "^4.3.7",
    "debug": "^4.3.4",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.0.0",
    "hardhat": "^2.13.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.24",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-proxy": "^1.0.0",
    "hardhat-spdx-license-identifier": "^2.1.0",
    "hardhat-tracer": "^2.1.2",
    "hardhat-watcher": "^2.5.0",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  }
}
